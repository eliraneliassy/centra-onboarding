{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@akamai/books": ["apps/books/src/index.ts"],
      "@akamai/cart": ["apps/cart/src/index.ts"],
      "@akamai/cart-state": ["apps/cart-state/src/index.ts"],
      "@akamai/feed": ["apps/feed/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
